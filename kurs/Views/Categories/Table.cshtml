@{
    Layout = null;
}
@model List<Category>
<div class="table-responsive mb-5">
    <table class="table table-bordered text-center mb-0">
        <thead class="bg-secondary text-dark">
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Products Count</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody class="align-middle">
            @foreach (var category in Model)
            {
                <tr>
                    <td class="align-middle"><img src="@category.ImagePath" alt="" style="width: 50px;"></td>
                    <td class="align-middle w-50">@category.Name</td>
                    <td class="align-middle">@category.ProductsCount</td>
                    <td class="align-middle">
                        <div class="d-flex justify-content-center">
                            <button onclick="showInPopup('@Url.Action("Edit", "Categories", new { id = category.Id })', 'Edit Category')" class="btn btn-sm btn-primary"><i class="fas fa-pen"></i></button>
                            <button onclick="AjaxDelete('@Url.Action("Delete", "Categories", new { id = category.Id })')" class="btn btn-sm btn-primary" style="width: 32px"><i class="fa fa-times"></i></button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
