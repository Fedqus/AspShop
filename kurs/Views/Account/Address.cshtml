@using kurs.Models.Forms;
@{
    Layout = null;
}
@model AddressForm
<form asp-action="Address" asp-controller="Account" onsubmit="return AddressPost(this);">
    <div asp-validation-summary="All" hidden></div>
    <div class="row align-items-end mb-3">
        <div class="col-3 pr-2">
            <span asp-validation-for="CityId" class="text-danger"></span>
            <div class="input-group">
                <select class="custom-select" asp-for="CityId">
                    <option selected>Choose a City</option>
                    @foreach (Country country in ViewBag.Countries)
                    {
                        <optgroup label="@country.Name">
                            @foreach (City city in country.Cities)
                            {
                                <option value="@city.Id">@city.Name</option>
                            }
                        </optgroup>
                    }
                </select>
            </div>
        </div>
        <div class="col pl-2">
            <span asp-validation-for="Address" class="text-danger"></span>
            <div class="input-group">
                <input type="text" asp-for="Address" class="form-control" placeholder="Address" aria-label="Address">
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary btn-block">Save Changes</button>
</form>
