@using kurs.Models.Forms;
@{
    ViewData["Title"] = "Login";
}
@model LoginForm
<!-- Page Header Start -->
<div class="container-fluid bg-secondary mb-5">
    <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 200px">
        <h1 class="font-weight-semi-bold text-uppercase">Login</h1>
    </div>
</div>
<!-- Page Header End -->
<div class="container-fluid d-flex justify-content-center">
    <form asp-action="login" asp-controller="account" asp-route-ReturnUrl="@ViewBag.ReturnUrl" class="w-50">
        <div asp-validation-summary="All" hidden></div>
        <span asp-validation-for="Email" class="text-danger"></span>
        <div class="input-group mb-3">
            <input type="text" asp-for="Email" class="form-control" placeholder="Email" aria-label="Email">
        </div>
        <span asp-validation-for="Password" class="text-danger"></span>
        <div class="input-group mb-3">
            <input type="password" asp-for="Password" class="form-control" placeholder="Password" aria-label="Password">
        </div>
        <button type="submit" class="btn btn-primary btn-block">Confirm</button>
    </form>
</div>