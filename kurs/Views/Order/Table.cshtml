@{
    Layout = null;
}
@model List<Order>
<div class="table-responsive mb-5">
    <table class="table table-bordered text-center mb-0">
        <thead class="bg-secondary text-dark">
            <tr>
                <th>Order Id</th>
                <th>User</th>
                <th>Shipping</th>
                <th>Total Price</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody class="align-middle">
            @foreach (var order in Model)
            {
                <tr>
                    <td class="align-middle">#@order.Id</td>
                    <td class="align-middle">@order.User.Fullname()</td>
                    <td class="align-middle">@order.Shipping.Name</td>
                    <td class="align-middle">@order.TotalPrice().ToString("F")</td>
                    <td class="align-middle">
                        <button onclick="showInPopup('/order/details/@order.Id', 'Order #@order.Id')" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>View Detail</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
