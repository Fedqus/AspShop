@{
    Layout = null;
}
@model List<CartItem>
@if (Model.Count > 0)
{
    <table class="table table-bordered text-center mb-0">
        <thead class="bg-secondary text-dark">
            <tr>
                <th>Products</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Remove</th>
            </tr>
        </thead>
        <tbody class="align-middle">
            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle"><img src="@item.Product.Images.First().ImagePath" alt="" style="width: 50px;"> @item.Product.Name</td>
                    <td class="align-middle">$@item.Product.Price.ToString("F")</td>
                    <td class="align-middle">
                        <div class="input-group quantity mx-auto" style="width: 60px;">
                            <input type="number" data-product-id="@item.Product.Id" min="1" class="form-control form-control-sm bg-secondary text-center" value="@item.Amount">
                        </div>
                    </td>
                    @{
                        var total = item.Product.Price * item.Amount;
                    }
                    <td class="align-middle">$@total.ToString("F")</td>
                    <td class="align-middle"><button onclick="CartProductDelete(@item.Product.Id)" class="btn btn-sm btn-primary"><i class="fa fa-times"></i></button></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="row justify-content-md-center py-5 px-xl-5">
        <div class="col-md-6 col-12 py-5">
            <div class="text-center mb-2 pb-2">
                <h2 class="section-title px-5 mb-3"><span class="px-2">Empty</span></h2>
                <p>Your cart is empty, please add something.</p>
                <div>
                    <a href="/" class="btn btn-primary px-4">Home</a>
                    <a href="/shop" class="btn btn-primary px-4">Shop</a>
                </div>
            </div>
        </div>
    </div>
}