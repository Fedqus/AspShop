@using kurs.Models.Forms;
@{
    Layout = null;
}
@model TagGroupForm
<form asp-action="Add" asp-controller="TagGroups" onsubmit="return AjaxPost(this);">
    <div asp-validation-summary="All" hidden></div>
    <span asp-validation-for="Name" class="text-danger"></span>
    <div class="input-group mb-3">
        <input type="text" asp-for="Name" class="form-control" placeholder="Name">
    </div>
    <button type="submit" class="btn btn-primary btn-block">Add</button>
</form>