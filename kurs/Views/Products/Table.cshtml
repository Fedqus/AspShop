@{
    Layout = null;
}
@model List<Product>
<div class="table-responsive mb-5">
    <table class="table table-bordered text-center mb-0">
        <thead class="bg-secondary text-dark">
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Description</th>
                <th>Category</th>
                <th>Company</th>
                <th>Tags</th>
                <th>Price</th>
                <th>Amount</th>
                <th>Rating</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody class="align-middle">
            @foreach (var product in Model)
            {
                <tr>
                    <td class="align-middle"><img src="@product.Images.First().ImagePath" alt="" style="width: 50px;"></td>
                    <td class="align-middle">@product.Name</td>
                    <td class="align-middle">@product.Description</td>
                    <td class="align-middle">@product.Category.Name</td>
                    <td class="align-middle">@product.Company.Name</td>
                    <td class="align-middle">@string.Join(", ", product.Tags.Select(x => x.Tag.Name))</td>
                    <td class="align-middle">@product.Price</td>
                    <td class="align-middle">@product.Amount</td>
                    <td class="align-middle">@product.Rating</td>
                    <td class="align-middle">
                        <div class="d-flex justify-content-center">
                            <button onclick="showInPopup('@Url.Action("Edit", "Products", new { id = product.Id })', 'Edit Product')" class="btn btn-sm btn-primary"><i class="fas fa-pen"></i></button>
                            <button onclick="AjaxDelete('@Url.Action("Delete", "Products", new { id = product.Id })')" class="btn btn-sm btn-primary" style="width: 32px"><i class="fa fa-times"></i></button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
