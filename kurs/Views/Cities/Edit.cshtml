@using kurs.Models.Forms;
@{
    Layout = null;
}
@model CityForm
<form asp-action="Edit" asp-controller="Cities" enctype="multipart/form-data" onsubmit="return AjaxPost(this);">
    <div asp-validation-summary="All" hidden></div>
    <span asp-validation-for="Name" class="text-danger"></span>
    <div class="input-group mb-3">
        <input type="text" asp-for="Name" class="form-control" placeholder="Name">
    </div>
    <span asp-validation-for="CountryId" class="text-danger"></span>
    <div class="input-group mb-3">
        <select class="custom-select" asp-for="CountryId">
            <option selected>Choose a Country</option>
            @foreach (Country country in ViewBag.Countries)
            {
                <option value="@country.Id">@country.Name</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary btn-block">Save</button>
</form>