@{
    Layout = null;
}
@model List<City>
<div class="table-responsive mb-5">
    <table class="table table-bordered text-center mb-0">
        <thead class="bg-secondary text-dark">
            <tr>
                <th>Name</th>
                <th>Country</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody class="align-middle">
            @foreach (var city in Model)
            {
                <tr>
                    <td class="align-middle">@city.Name</td>
                    <td class="align-middle">@city.Country.Name</td>
                    <td class="align-middle">
                        <div class="d-flex justify-content-center">
                            <button onclick="showInPopup('@Url.Action("Edit", "Cities", new { id = city.Id })', 'Edit City')" class="btn btn-sm btn-primary"><i class="fas fa-pen"></i></button>
                            <button onclick="AjaxDelete('@Url.Action("Delete", "Cities", new { id = city.Id })')" class="btn btn-sm btn-primary" style="width: 32px"><i class="fa fa-times"></i></button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
