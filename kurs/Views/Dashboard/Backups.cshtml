@{
    Layout = null;
}
@model List<FileInfo>
<div class="table-responsive mb-5">
    <table class="table table-bordered text-center mb-0">
        <thead class="bg-secondary text-dark">
            <tr>
                <th>Name</th>
                <th>Date</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody class="align-middle">
            @foreach (var file in Model.OrderByDescending(x => x.CreationTime))
            {
                <tr>
                    <td class="align-middle">@file.Name</td>
                    <td class="align-middle">@file.CreationTime</td>
                    <td class="align-middle">
                        <div class="d-flex justify-content-center">
                            <button onclick="restore('@file.Name');" class="btn btn-sm btn-primary"><i class="far fa-arrow-alt-circle-down"></i></button>
                            <button onclick="deleteBackup('@file.Name');" class="btn btn-sm btn-primary" style="width: 32px"><i class="fa fa-times"></i></button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
